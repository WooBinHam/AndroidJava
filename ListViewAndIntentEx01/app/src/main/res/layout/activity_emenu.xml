<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".e_activity_Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6BB43"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnReturn"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="이전" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="메뉴 선택하기"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하시는 메뉴를 골라주세요" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커피" />

        <TableRow>

            <Button
                android:id="@+id/BtnNum0"
                android:layout_weight="1"
                android:text="아메리카노(HOT)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum1"
                android:layout_weight="1"
                android:text="아메리카노(ICED)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum2"
                android:layout_weight="1"
                android:text="카페라떼(HOT)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum3"
                android:layout_weight="1"
                android:text="카페라떼(ICED)" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/BtnNum4"
                android:layout_weight="1"
                android:text="바닐라라떼(HOT)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum5"
                android:layout_weight="1"
                android:text="바닐라라떼(ICED)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum6"
                android:layout_weight="1"
                android:text="카페모카(HOT)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum7"
                android:layout_weight="1"
                android:text="카페모카(ICED)" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음료 , 티" />

        <TableRow>

            <Button
                android:id="@+id/BtnNum8"
                android:layout_weight="1"
                android:text="수박주스" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum9"
                android:layout_weight="1"
                android:text="배주스" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum10"
                android:layout_weight="1"
                android:text="복숭아에이드" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum11"
                android:layout_weight="1"
                android:text="제주말차프라페" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/BtnNum12"
                android:layout_weight="1"
                android:text="애플민트티" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum13"
                android:layout_weight="1"
                android:text="유자레몬티" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum14"
                android:layout_weight="1"
                android:text="오렌지자몽티" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <Button
                android:id="@+id/BtnNum15"
                android:layout_weight="1"
                android:text="카모마일" />

            <Button
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:enabled="false" />
        </TableRow>

        <TableRow>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="다음 단계로"/>

</LinearLayout>